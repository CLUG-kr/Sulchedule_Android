<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.DarkNavigationBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TodaySettingDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:titleTextColor">#FFFFFF</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

</resources>