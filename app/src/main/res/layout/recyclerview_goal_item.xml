<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingRight="17dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-2dp">

        <TextView
            android:id="@+id/text_left_top"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:clickable="false"
            android:text="demo1"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/h4" />

        <TextView
            android:id="@+id/text_right_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:text="demo2"
            android:textAlignment="viewEnd"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/h4" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/edit_goal_touch_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/text_left_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="demo3"
            android:textColor="@color/textTransparent"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/text_right_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="demo4"
            android:textColor="@color/textTransparent"
            android:textSize="@dimen/h5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="30dp">
        <!--bottom layer-->
        <ImageView
            android:id="@+id/graph_full_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/recyclerview_goal_item_graph"
            android:tint="@color/textTransparent"></ImageView>
        <!--top layer-->
        <ImageView
            android:id="@+id/graph_overlay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/recyclerview_goal_item_graph"
            android:tint="@color/trafficRed"></ImageView>
    </RelativeLayout>
</LinearLayout>