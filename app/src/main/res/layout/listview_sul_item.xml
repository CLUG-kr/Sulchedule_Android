<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">
        <View
            android:id="@+id/favourite_bar"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/textview_sul"
            android:layout_marginLeft="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/stepper_container"
            android:maxLines="2"
            android:text="name count_bottle"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/h3"
            app:autoSizeTextType="uniform" />

        <RelativeLayout
            android:id="@+id/stepper_container"
            android:layout_width="144dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_stepper_background">

            <ImageView
                android:id="@+id/stepper_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:src="@drawable/ic_stepper_plus" />

            <ImageView
                android:id="@+id/stepper_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_stepper_minus" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>