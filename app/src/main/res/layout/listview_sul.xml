<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="17dp">

        <TextView
            android:layout_toLeftOf="@id/stepper_container"
            android:id="@+id/string_sul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="술 이름 _ 병"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/h3"
            android:maxLines="2"
            app:autoSizeTextType="uniform"/>

        <RelativeLayout
            android:id="@+id/stepper_container"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_stepper_background">

            <ImageView
                android:id="@+id/stepper_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:src="@drawable/ic_stepper_plus" />

            <ImageView
                android:id="@+id/stepper_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:src="@drawable/ic_stepper_minus" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>