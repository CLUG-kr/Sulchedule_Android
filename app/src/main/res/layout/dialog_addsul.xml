<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="4dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주류 추가"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/h3"/>
        <EditText
            android:maxLength="10"
            android:singleLine="true"
            android:id="@+id/text_name"
            android:textColorHint="@color/textTransparent"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/h5"
            android:hint="이름"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textWhite"
            android:layout_marginTop="20dp"/>
        <EditText
            android:maxLength="10"
            android:singleLine="true"
            android:id="@+id/text_unit"
            android:textColorHint="@color/textTransparent"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/h5"
            android:hint="단위(캔, 병 등)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textWhite"
            android:layout_marginTop="2dp"/>
        <EditText
            android:maxLength="14"
            android:singleLine="true"
            android:inputType="number"
            android:id="@+id/text_kcal"
            android:textColorHint="@color/textTransparent"
            android:textColor="@color/textWhite"
            android:hint="단위당 열량(kcal)"
            android:textSize="@dimen/h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textWhite"
            android:layout_marginTop="2dp"/>
        <EditText
            android:maxLength="14"
            android:singleLine="true"
            android:inputType="number"
            android:id="@+id/text_price"
            android:textColorHint="@color/textTransparent"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/h5"
            android:hint="단위당 가격(원)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textWhite"
            android:layout_marginTop="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="2dp">
            <TextView
                android:padding="16dp"
                android:id="@+id/button_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닫기"
                android:textSize="@dimen/h6"
                android:textColor="@color/textWhite"
                android:layout_toLeftOf="@id/button_save"/>
            <TextView
                android:padding="16dp"
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="@dimen/h6"
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>