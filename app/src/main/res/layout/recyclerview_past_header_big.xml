<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/upper_area"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:alpha="0">

        <ImageView
            android:id="@+id/separator"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_past_separator" />

        <TextView
            android:id="@+id/button_left_touch_interceptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/separator"
            android:paddingLeft="11dp"
            android:paddingTop="14dp"
            android:paddingRight="11dp"
            android:paddingBottom="14dp"
            android:text="@string/past_left"
            android:textSize="@dimen/h5" />

        <TextView
            android:id="@+id/button_right_touch_interceptor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/separator"
            android:paddingLeft="11dp"
            android:paddingTop="14dp"
            android:paddingRight="11dp"
            android:paddingBottom="14dp"
            android:text="@string/past_right"
            android:textSize="@dimen/h5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_area"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7">

                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="19dp"
                        android:text="총계"
                        android:textColor="@color/textWhite"
                        android:textSize="@dimen/h4"
                        android:textStyle="bold" />

                    <ListView
                        android:id="@+id/recyclerview_past_inner_item_container_header"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/text_date"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp" />
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_weight="9"
                    android:backgroundTint="@color/colorPrimaryDark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="25dp"
                            android:src="@drawable/ic_crown" />

                        <TextView
                            android:id="@+id/title_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="1dp"
                            android:text="소주"
                            android:textAlignment="center"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/h5" />

                        <TextView
                            android:id="@+id/desc_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="18dp"
                            android:text="4병, 12000원, 600kcal"
                            android:textAlignment="center"
                            android:textColor="@color/textTransparent"
                            android:textSize="@dimen/h6" />

                        <TextView
                            android:id="@+id/title_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="1dp"
                            android:text="소주"
                            android:textAlignment="center"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/h5" />

                        <TextView
                            android:id="@+id/desc_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="18dp"
                            android:text="4병, 12000원, 600kcal"
                            android:textAlignment="center"
                            android:textColor="@color/textTransparent"
                            android:textSize="@dimen/h6" />

                        <TextView
                            android:id="@+id/title_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="1dp"
                            android:text="소주"
                            android:textAlignment="center"
                            android:textColor="@color/textWhite"
                            android:textSize="@dimen/h5" />

                        <TextView
                            android:id="@+id/desc_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="18dp"
                            android:text="4병, 12000원, 600kcal"
                            android:textAlignment="center"
                            android:textColor="@color/textTransparent"
                            android:textSize="@dimen/h6" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>